@media screen and (max-width: 1439.98px) {
	.container {
		max-width: 1200px;
	}

	.order__form {
		margin-left: 0;
		margin-right: 0;
	}

}


@media screen and (max-width: 1199.98px) {
	.container {
		max-width: 992px;
	}

	.routes__button {
		width: 120px;
	}

	.order__input {
		width: 240px;
	}

	.order__input_date .order__input {
		background-position: top 20px right 20px;
	}

	.order__select {
		background-position: top 25px right 24px;

	}


}


@media screen and (max-width: 991.98px) {
	.container {
		max-width: 768px;
	}

	.routes__button {
		width: 100px;
		height: 50px;
	}

	.hours .hours__text {
		width: 100%;
	}

	.about__info {
		width: 100%;
	}

	.information__text {
		flex-direction: column;
	}

	.information__goods {
		width: 100%;

		&:last-child {
			margin-top: 40px;
		}
	}


	.order__inner {
		padding: 25px 30px;
	}

	.order__row {
		flex-direction: column;
		margin-bottom: 0;
	}

	.order__input {
		width: 100%;
		margin-bottom: 10px;
	}

	.order__select {
		width: 100%;
	}

	.order__input_date {
		width: 100%;
	}

	.order__input_route {
		width: 100%;
	}




}

@media screen and (max-width: 767.98px) {
	.container {
		max-width: 576px;
	}
	.routes {
		height: auto;
	}

	.route {
		flex-direction: column;
	}

	.route__images {
		margin-right: 0;
		width: 100%;
	}

	.routes__button {
		font-size: 14px;
		width: 80px;
		height: 45px;

	}
	.routes__buttons {
		margin-bottom: 35px;
	}

	.route__description {
		width: 100%;
		margin-top: 25px;
	}

	.hours {
		//background-position: left -200px top 0;
		//background-size: fit;
	}

	.about__items {
		flex-direction: column-reverse;
	}

	.about__gallery {
		width: 100%;
		margin-bottom: 20px;
	}

	.about__text {
		padding-right: 0;
		width: 100%;
	}

	.about__info {
		margin-bottom: 20px;
	}

	.discount__text {
		width: 100%;
	}

	.information__item:not(:last-child) {
		margin-bottom: 15px;
	}


}

@media screen and (max-width: 575.98px) {

	html {
		--section-padding: 50px;
	}

	.routes__buttons {
		flex-wrap: wrap;
		//justify-content: space-around;
	}

	.routes__button {
		margin-bottom: 15px;
		width: 30%;

	}

	.routes {
		height: auto;


	}

	.routes__items {
		& .main-button {
			margin: 25px auto 0 auto;
			width: 100%;
		}
	}

	.order__inner {
		padding: 15px;
	}

	.order__form {
		padding: 10px;
	}

}


@media screen and (max-width: 430px) {
	.section__heading {
		font-size: 52px;
		margin-bottom: 30px;
	}
}

@media screen and (max-width: 380px) {
	.section__heading {
		font-size: 40px;
	}
}

